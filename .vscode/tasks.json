    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run server",
            "type": "shell",
            "command": "python manage.py runserver",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Celery worker",
            "type": "shell",
            "command": "celery -A Baby_app worker --loglevel=info",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Celery beat",
            "type": "shell",
            "command": "celery -A Baby_app beat --loglevel=info",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Publish sensor data",
            "type": "shell",
            "command": "python3 operate_influx.py",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Start all processes",
            "dependsOn": [
                "Run server",
                "Celery worker",
                "Celery beat",
                "Publish sensor data"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}